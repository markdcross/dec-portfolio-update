<div class="modal" id="contactModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Give me a shout</h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Email:
          <a href="mailto:markdcross@gmail.com">markdcross@gmail.com</a>
          <br />
          Phone:
          <a href="tel:+14102713079">410.271.3079</a>
          <br />
          Calendly:
          <a
            href="https://calendly.com/markdcross/15min"
            target="_blank"
            class="calendly"
            >Put time on my calendar</a
          ><br />
        </p>
        <hr />
        <!-- TODO Add form validation -->
        <form name="contact" id="contactForm">
          <div class="form-group">
            <label for="formName">Name</label>
            <input type="text" class="form-control" id="formName" />
          </div>
          <div class="form-group">
            <label for="formEmail">Email address</label>
            <input
              type="email"
              class="form-control"
              id="formEmail"
              aria-describedby="emailHelp"
            />
            <small id="emailHelp" class="form-text"
              >I'll never share your email with anyone else.</small
            >
          </div>
          <div class="form-group">
            <label for="formMessage">Message</label>
            <textarea class="form-control" id="formMessage" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary" id="contactSubmit">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
